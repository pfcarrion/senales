/* Estilos generales */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
    color: #333;
}

/* Encabezado */
.hero {
    text-align: center;
    padding: 50px 20px;
    background-color: #f4f4f4;
    color: #333;
}
.hero h1 {
    font-size: 2.5rem;
    margin-bottom: 10px;
}
.hero p {
    font-size: 1.2rem;
    color: #666;
}

/* Sección de características */
.features {
    display: flex;
    justify-content: space-around;
    padding: 20px;
    flex-wrap: wrap;
    gap: 20px;
}
.feature {
    text-align: center;
    max-width: 300px;
    flex: 1;
}
.feature img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    object-fit: cover;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}
.feature h2 {
    font-size: 1.5rem;
    margin-top: 15px;
}
.feature p {
    font-size: 1rem;
    color: #555;
}

/* Pie de página */
.footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 20px;
}
.footer a {
    color: #00bcd4;
    text-decoration: none;
    margin: 0 5px;
}
.footer a:hover {
    text-decoration: underline;
}
.social-media img {
    width: 24px;
    height: 24px;
    margin: 0 10px;
    filter: invert(100%);
}
.social-media img:hover {
    filter: invert(50%);
}

